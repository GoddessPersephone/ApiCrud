@model CandidatoModel

@{
    ViewData["Title"] = "Cadastro";
}

<div class="text-center">

  <h3 class="display-4">Cadastrar</h3>

    </div>


<form asp-controller="Candidato" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text"asp-for="Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" />  
    </div>

    <div class="form-group">
         <label for="Conhecimento" class="form-label">Conhecimentos</label>
         <input type="text"  asp-for="Conhecimentos" class="form-control" />  
    </div>

    <button type="submit" class="btn btn-success btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block"asp-controller="Candidato" asp-action="Index" role="button">Voltar</a>
</form>
